{
  "components": {
    "schemas": {
      "UserCreate": {
        "type": "object",
        "required": ["nome", "email", "password"],
        "properties": {
          "nome": { 
            "type": "string",
            "description": "Nome completo do usuário",
            "example": "Rafael"
          },
          "email": { 
            "type": "string", 
            "format": "email",
            "description": "E-mail único do usuário",
            "example": "rafa@gmail.com"
          },
          "password": { 
            "type": "string", 
            "format": "password",
            "description": "Senha do usuário (mínimo 6 caracteres)",
            "example": "123456"
          }
        }
      },

      "UserResponse": {
        "type": "object",
        "description": "Dados retornados de um usuário",
        "properties": {
          "id": { 
            "type": "string",
            "description": "Identificador único do usuário",
            "example": "clx9k2h1a0000abc123xyz"
          },
          "nome": { 
            "type": "string",
            "description": "Nome do usuário",
            "example": "Rafael"
          },
          "email": { 
            "type": "string",
            "format": "email",
            "description": "E-mail do usuário",
            "example": "rafa@gmail.com"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Data da criação do usuário",
            "example": "2026-02-05T21:00:00.000Z"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Data da última atualização do usuário",
            "example": "2026-02-05T21:10:00.000Z"
          }
        }
      }
    }
  }
}
